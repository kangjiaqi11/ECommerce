
@{
    ViewBag.Title = "FrontUserFenye";
}

<h2>FrontUserFenye</h2>

@using MODEL.ZhangYang
@model Fenye1

<!DOCTYPE html>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<html lang="en">
<body class="page-header-fixed page-quick-sidebar-over-content ">
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Modal title</h4>
                        </div>
                        <div class="modal-body">
                            Widget settings form goes here
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn blue">Save changes</button>
                            <button type="button" class="btn default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
            <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12" id="Show">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <h2>用户列表</h2>
                            </div>
                            <div class="tools">

                            </div>
                        </div>
                        <input id="UserName" type="text" placeholder="用户昵称" />
                        <input id="Submit1" type="submit" value="查询" />

                        <div class="portlet-body">
                            <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                                <thead>
                                    <table class="table">
                                        <tr>
                                            <td>用户ID</td>
                                            <td>用户账号</td>
                                            <td>用户昵称</td>
                                            <td>会员等级</td>
                                            <td>消费金额</td>
                                            <td>订单数量</td>
                                            <td>用户详情</td>
                                        </tr>
                                        @foreach (var item in Model.FrontUsers)
                                        {
                                            <tr>
                                                <td>@item.FrontUserid</td>
                                                <td>@item.Account</td>
                                                <td>@item.UserName</td>
                                                <td>@item.MembersId</td>
                                                <td>@item.Consumption</td>
                                                <td>@item.Number</td>
                                                <td><a href="FrontUserShow1">用户详情</a></td>
                                            </tr>
                                        }
                                    </table>

                                    <table>
                                        <tr>
                                            @for (int i = 1; i <= (Model.Count / 2) + (Model.Count % 2 == 0 ? 0 : 1); i++)
                                            {
                                                <td><input type="button" value="@i" onclick="jump(@i)" /></td>
                                            }
                                        </tr>
                                    </table>
                                    <script>
                                        function jump(i) {
                                            location.href = "/For/FrontUserFenye?PageSize=2&PageIndex=" + i;
                                        }
                                    </script>
                                    @*显示数据*@
                                </thead>
                                <tbody id="ActivityShow"></tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <div class="row">
                <div class="col-md-5 col-sm-12">
                    <div class="dataTables_info" id="sample_editable_1_info" role="status" aria-live="polite">

                    </div>
                </div>
                <div class="col-md-7 col-sm-12">
                    <div class="dataTables_paginate paging_simple_numbers" id="sample_editable_1_paginate">
                        <ul class="pagination">
                            <li class="paginate_button previous disabled" aria-controls="sample_editable_1" tabindex="0" id="sample_editable_1_previous">
                            </li>
                            <li class="paginate_button next disabled" aria-controls="sample_editable_1" tabindex="0" id="sample_editable_1_next">
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTENT -->
        </div>
        <!-- END CONTENT -->
        <!-- BEGIN QUICK SIDEBAR -->
        <!-- END QUICK SIDEBAR -->
    </div>
    <!-- END CONTAINER -->
</body>
<!-- END BODY -->
</html>

