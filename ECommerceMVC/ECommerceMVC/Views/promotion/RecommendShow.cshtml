    <script>
        jQuery(document).ready(function () {

            Query(2);

        });
        function UpPage() {
            var index = $("#index").val();
            index = index - 1;
            alert(index);
            if (index > 0) {

                Query(index);
            }
            else {
                alert("已经是首页了");
                return;
            }
        }
        function NextPage() {
            var ToCount = $("#tocount").val();
            var index = $("#index").val();
            index = index + 1;
            alert(ToCount);
            alert(index);
            if (index <= ToCount) {
                Query(index);
            }
            else {
                alert("已经是尾页了");
                return;
            }
        }

        //第一这里加载查询的方法
        function Query(pageindex) {
            $("#ActivityShow").html("");
            var GoodName = $("#GoodName").val();
            var IsRecommend = $("#IsRecommend").val();
            $.ajax({
                url: "PageRecommendShow",
                type: "POST",
                data: { PageIndex: pageindex, PageSize: 2, GoodName: GoodName, IsRecommend: IsRecommend },
                dateType: "json",
                success: function (ser) {
                    $(ser.DateList).each(function myfunction() {
                        var tr = '<tr>'
                            + '<th>' + this.RecommendId + '</th>'
                            + '<th>' + this.GoodsName + '</th>'
                            + '<th>' + this.GoodsIntro + ' </th>'
                            + '<th>' + this.IsRecommend + '</th>'
                            + '<th>' + this.Statel + ' </th>'
                            + '</tr>'
                        $("#ActivityShow").append(tr);
                    })

                    var count = '<h5> 共显示显示' + ser.TotaCount + '条数据</h5>';
                    $("#sample_editable_1_info").append(count);
                    $("#tocount").val(ser.TotaCount);
                    $("#index").val(pageindex);
                }
            });

        }
                    //第二写两个方法
