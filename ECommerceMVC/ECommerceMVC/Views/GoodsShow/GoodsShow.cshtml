        //第一这里加载查询的方法
        function Query() {
            $("#GoodShow").html("");
            $.ajax({
                url: "GoodsShow",
                type: "POST",
                dateType: "json",
                success: function (ser) {
                    console.log(ser);
                    $(ser.DateList).each(function myfunction() {
                        var tr = '<tr>'
                            + '<th>' + this.GoodId + '</th>'
                            + '<th>' + this.BrandId + '</th>'
                            + '<th>' + this.CategoryId + '</th>'
                            + '<th>' + this.GoodsType + ' </th>'
                            + '<th>' + this.GoodsName + '</th>'
                            + '<th>' + this.GoodsBrief + '</th>'
                            + '<th>' + this.GoodsIntro + '</th>'
                            + '<th>' + this.MarketPrice + '</th>'
                            + '<th>' + this.SalePrice + ' </th>'
                            + '<th>' + this.CostPrice + '</th>'
                            + '<th>' + this.BrowseCount + '</th>'
                            + '<th>' + this.CommentCount + '</th>'
                            + '<th>' + this.CollectCount + ' </th>'
                            + '<th>' + this.ShareCount + '</th>'
                            + '<th>' + this.PutawayTime + '</th>'
                            + '<th>' + this.GoodsState + '</th>'
                            + '<th>' + this.Status + '</th>'
                            + '<th>' + this.CreateTime + ' </th>'
                            + '<th>' + this.UpdateTime + '</th>'
                            + '<th>' + this.CreaterId + '</th>'
                            + '<th>' + this.UpdaterId + '</th>'
                            + '<th>' + (this.Statel == 1 ? "已启用" : "未启用") + ' </th>'
                            + '<th>' + (this.Statel == 2 ? '<input id="DeleteStatel" class="btn green" type="button" value="启用" onclick="UpdateState2(' + this.TimeQId + ')" />' : '<input id="DeleteStatel" class="btn green" type="button" value="不启用" onclick="UpdateState3(' + this.TimeQId + ')" />') + '</th>'
                            + '<th>' + '<input id="DeleteStatel" class="btn green" type="button" value="删除" onclick="DeleteStatel(' + this.TimeQId + ')" />' + '</th>'
                            + '</tr>'
                        $("#GoodShow").append(tr);
                    })
                }
            });
        }
        function UpdateState2(id) {
            alert(1);
            $.ajax({
                url: "TimeQUpdate2",
                type: "POST",
                data: { Tid: id },
                dateType: "json",
                success: function (ser) {
                    if (ser) {
                        Query();
                    }
                    else {
                        alert("修改失败");
                    }
                }
            });
        }
        function UpdateState3(id) {
            alert(2);
            $.ajax({
                url: "TimeQUpdate3",
                type: "POST",
