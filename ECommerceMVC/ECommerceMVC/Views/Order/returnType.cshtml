    <script>

        $(document).ready(function () {
             $("#ActivityShow").empty();//清空原来的数据
            $.ajax({
                url: "returnType",
                type: "POST",
                dataType: "json",
                success: function (res) {

                    $(res).each(function () {

                        var tr = '<tr>'
                              + '<td><input id="check" name="quan" value="'+this.Id+'" type="checkbox" /></td>'
                            + '<td>' + this.ReturnName + '</td>'
                            + '<td>' + this.Id + '</td>'
                            + '<td>' + (this.RetuemState == 1 ? "启用" : "禁用") + '</td>'
                            + '<td>2020-03-30 00:00:00.000</td>'
                            + '<td><a onclick="update(' + this.Id + ',this)">删除</a></td>'
                            + '</tr> '


                        $("#ActivityShow").append(tr);
                    })
                }


            });
        })
        //批量删除
    $("#Del").click(function () {
        if (!confirm("确认删除吗？")) {
            return;
        }
        //获取id
        var ids = [];
        //所有选中的复选框
        $("[name=quan]:checked").each(function () {
            ids.push(this.value);
        })
        $.ajax({
          url: "Updatereturntype",
            type: "POST",
            data: { Id: ids.toString() },
             dataType: "json",
            success: function (res) {//成功的回调函数
                 if (res.IsSuccess) {
                     alert(res.Msg);
                     location.href='/Order/returnType'
                   
                }
            }
        })
    })

        $("#Checkbox1").click(function () {
            $("[name=quan]").prop("checked",this.checked)
        })

        function update(ReturnId, obj) {
            if (!confirm("确定删除吗")) {
                return;
            }

           
            $.ajax({
                url: "Updatereturntype",
                type: "POST",
                data: { Id: ReturnId },
                dataType: "json",
                success: function (res) {
                    if (res.IsSuccess) {
                        alert(res.Msg);
                        $(obj).parent().parent().remove();

                    }

                    else {
                        alert(res.Msg)
                    
                    }
                }

            })
        }
       






