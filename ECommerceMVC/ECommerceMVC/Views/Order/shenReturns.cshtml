            $(document).ready(function () {

                var dd = $("#GetId").val();
                $.ajax({
                    url: "shenReturns",
                    data: { id: dd },
                    type: "POST",
                    dataType: "json",
                    success: function (res) {
                        $(res).each(function () {
                            var res = ' <tr>'
                                + '<td style="height:50px;text-align:center">' + this.GoodsName + '</td>'
                                + ' <td style="height:50px;text-align:center">' + this.MarketPrice + '</td>'
                                + ' <td style="height:50px;text-align:center">' + this.TypeName + '</td>'
                                + ' <td style="height:50px;text-align:center">' + this.BrandName + '</td>'
                                + ' <td style="height:50px;text-align:center">' + this.MarketPrice + '</td>'
                                + '</tr>'
                            var res2 = ' <tr><th class="numeric" style="width:200px;text-align:right">服务单号</th><td >' + this.ReturnNumber + '</td></tr>'
                                + '<tr><th class="numeric" style="width:200px;text-align:right">申请状态 </th><td >' + (this.ReturnState == 1 ? "待处理" : this.ReturnState == 2 ? "退货中" : this.ReturnState == 3 ? "已完成" : "已拒绝") + '</td></tr>'
                                + '<tr> <th class="numeric" style="width:200px;text-align:right">订单编号</th><td >' + this.OrderId + '</td></tr>'
                                + '<tr> <th class="numeric" style="width:200px;text-align:right">申请时间</th><td >' + this.SubmitTimeST + '</td></tr>'
                                + '<tr> <th class="numeric" style="width:200px;text-align:right">用户账号</th><td >' + this.UserAcco + '</td></tr>'
                                + '<tr> <th class="numeric" style="width:200px;text-align:right">退货原因</th><td >' + this.ReturnName + '</td></tr>'
                                + '<tr> <th class="numeric" style="width:200px;text-align:right">描述问题</th><td >' + this.Remark + '</td></tr>'
                                + '<tr> <th class="numeric" style="width:200px;text-align:right">退款金额</th><td >' + this.MarketPrice + '</td></tr>'
                            if (this.ReturnState == 1) {
                                var res3 = ' <button type="button" onclick="update('+this.ReturnId+',1)" class="btn  green"><trans oldtip=" Submit" newtip="提交">确定退货</trans></button>'
                                    + '<button type="button" onclick="update('+this.ReturnId+',2)"  class="btn  red"><trans oldtip=" Submit" newtip="提交">拒绝退货</trans></button>'
                                    + '</div>'

                            }
                            if (this.ReturnState==2) {
                                  var res3 = ' <button type="button" onclick="update('+this.ReturnId+',3)" class="btn  green"><trans oldtip=" Submit" newtip="提交">确定收货</trans></button>'
                                  
                                    + '</div>'
                            }
                            $("#btn").append(res3);
                            $("#ActivityShow2").append(res2);
                            $("#ActivityShow").append(res);

                        })
                    }


                });
               
            })
         
            function update(ReturnId, state) {
                if (state==1) {
                        state = state + 1;
                }
                if (state==2) {
                     state = state + 2;
                }
                
             
            
                    $.ajax({
                        url: "UpdateRetutn",
                        type: "POST",
                        data: { Id: ReturnId, state: state },
                        dataType: "json",
                        success: function (res) {
                            if (res.Status == 1) {
                                alert(res.Msg)
                                location.href = '/Order/ReturnGoods';
                            }
                            else {
                                alert('拒绝成功')
                                  location.href = '/Order/ReturnGoods';
                            }
                        }

                    })
